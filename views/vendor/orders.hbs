<link rel="stylesheet" href='/css/userOrders.css'
<body>
    <div class = "top">
        <form method="post" action="/vendor/{{vendor.van_ID}}/orders/search">
            <input type="search" size="10" name="order_ID" placeholder="start typing" autofocus>
            <label for="fulfilled"> fulfilled</span> </label> 
            <input type="checkbox" name="fulfilled">
            <label for="complete"> complete</span> </label> 
            <input type="checkbox" name="complete">
            <input type="submit" value="Search">
        </form>
        <div text-align='left'><a href="/vendor/">< </a></div>
        <div>
            <p>ORDERS</p>
        </div>
    </div>
    <div class= "card">
        <div >
            <p>ORDERID</p>
        </div>
        <div >
            <p>DATE</p>
        </div>
    </div>
    <ul>
            {{#each orders}}
            <li class='li-wrap'>
                <div class = "left">
                    <a href="orders/{{this.order_ID}}">ORDER #{{this.order_ID}}</a>
                </div>
                <div class = "right">
                    {{this.when}}
                </div>
            </li>
            {{/each}}            
    </ul>
</body>
