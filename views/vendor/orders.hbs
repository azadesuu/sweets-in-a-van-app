<link rel="stylesheet" href='/css/login.css'>
<link rel="stylesheet" href='/css/userOrders.css'>
<style>
    th, td {
        padding: 15px 20px;
        text-align: center;
        font-size: large;
    }
</style>
<div class='content-card'>
    <div style='padding:15px'>
    <h2 style='text-align:center'>ALL ORDERS</h2>
        <form method="post" action="/vendor/orders/search">
            <input type="text" size="10" name="order_ID" placeholder="Enter Order ID/Date" autofocus>
                <div style='text-align:center'>
                    <label for="unfulfilled">Unfulfilled</span></label>
                    <input type="checkbox" name="unfulfilled">
                    <label for="fulfilled">Fulfilled</span> </label>
                    <input type="checkbox" name="fulfilled">
                    <label for="complete">Complete</span> </label>
                    <input type="checkbox" name="complete">
                </div>
                <div style='text-align:center'>
                    <input type="submit" value="Search" style='padding:'>
                </div>
        </form>
    <table>
        <tr><th style='; text-align:left'>ORDER ID</th><th style='text-align:center; width:fit-content'>DATE</th><th style='text-align:right; width:20%'>STATUS</th></tr>
        {{#each orders}}
        <div class='details-card'>
            <tr>
                <td class = "orderID"> <a href="orders/{{this.order_ID}}">ORDER#{{this.order_ID}}</a></td>
                <td class = "date"><a href="orders/{{this.order_ID}}">{{this.when}}</a></td>
                <td class = "status"><a href="orders/{{this.order_ID}}">{{this.status}}</a></td>
            </tr>
        </div>
        {{/each}}
    </table>

    </div>
</div>