<div class = "top">
    <div text-align='left'><a href="/customer/my-orders">< </a></div>
    <div>
        <p>ORDER #{{order._id}}</p>
    </div>
</div>

<div class='cards'>
    <div>
        <p>Order time: {{order.when}}</p>
        <p>Van Name: {{order.van_ID}}</p>
        <p>Van Location: {{van.latitude}}, {{van.longitude}}</p>
    </div>
</div>

<table>
    <tr><th>Food Name</th> <th>Price</th> <th>Quantity</th></tr>
    {{#each order.orderItems}}
        <tr> <td>{{this.item_name}}</td> <td>{{this.price}}</td> <td>{{this.quantity}}</td> </tr>
    {{/each}}
</table>

