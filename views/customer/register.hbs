<link rel="stylesheet" href="/css/login.css">
    
<div class="content-card">
    <h2 style="text-align: center;">Register</h3>
    <form class="login-form" action="/customer/register" method="POST">
        <label for="first_name">First Name:</label>
        <input type="text" id="first_name" name="first_name" value="" placeholder="First Name">
        <label for="last_name">Last Name:</label>
        <input type="text" id="last_name" name="last_name" value="" placeholder="Last Name">
        <label for="email">Email Address:</label>
        <input type="text" id="email" name="email" value="" placeholder="Please enter your email address">
        <label for="password">Password:</label>
        <input type="text" id="password" name="password" value="" placeholder="Enter a password">
        
        <input type="submit" value="Register">    
        <a class='other-button' href="login">Already have an account?</a>
    </form>
</div>